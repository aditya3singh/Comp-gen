{
  "name": "comp-gen",
  "version": "1.0.0",
  "description": "Production-ready AI-powered React component builder platform",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/aditya3singh/Comp-gen.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:frontend",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install --prefix frontend && npm install --prefix backend",
    "vercel-build": "npm run build:frontend"
  },
  "keywords": [
    "react",
    "ai",
    "component-generator",
    "nextjs",
    "tailwindcss",
    "mongodb",
    "nodejs"
  ],
  "author": "Aditya Singh",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}